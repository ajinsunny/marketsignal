# Signal Copilot - Staging Environment Variables Template
# For testing before production deployment

# =============================================================================
# DATABASE (Neon Staging Branch)
# =============================================================================
DATABASE_URL=postgresql://user:password@ep-xxx-staging.us-east-2.aws.neon.tech/signalcopilot?sslmode=require

# =============================================================================
# JWT AUTHENTICATION (Can use different secret for staging)
# =============================================================================
JWT_SECRET=staging-secret-key-different-from-production
JWT_ISSUER=SignalCopilot.Api.Staging
JWT_AUDIENCE=SignalCopilot.Client.Staging
JWT_EXPIRATION_MINUTES=1440

# =============================================================================
# CORS (Allow staging frontend)
# =============================================================================
ALLOWED_ORIGINS=https://signalcopilot-git-staging.vercel.app,https://*.vercel.app

# =============================================================================
# EMAIL (SendGrid - use same account or different sandbox)
# =============================================================================
SENDGRID_API_KEY=SG.staging_key_here
SENDGRID_FROM_EMAIL=staging@signalcopilot.com
SENDGRID_FROM_NAME=Signal Copilot (Staging)

# =============================================================================
# NEWS APIS (Can use same keys as production)
# =============================================================================
NEWSAPI_KEY=your_newsapi_key_here
NEWSAPI_ENABLED=true
FINNHUB_API_KEY=your_finnhub_key_here
FINNHUB_ENABLED=true
SECEDGAR_ENABLED=true

# =============================================================================
# ALERT SETTINGS
# =============================================================================
ALERT_HIGH_IMPACT_THRESHOLD=0.5
ALERT_DAILY_DIGEST_TIME=10:00

# =============================================================================
# HANGFIRE
# =============================================================================
HANGFIRE_DASHBOARD_PASSWORD=staging-dashboard-password
HANGFIRE_WORKER_COUNT=3

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ASPNETCORE_ENVIRONMENT=Staging
ASPNETCORE_URLS=http://0.0.0.0:8080
