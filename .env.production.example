# Signal Copilot - Production Environment Variables Template
# Copy this file and fill in your actual values
# NEVER commit the actual .env.production file to Git!

# =============================================================================
# DATABASE
# =============================================================================
# Neon connection string format:
# postgresql://user:password@ep-xxx-xxx.us-east-2.aws.neon.tech/signalcopilot?sslmode=require

# Supabase connection string format:
# postgresql://postgres:[PASSWORD]@db.xxx.supabase.co:6543/postgres?pgbouncer=true

DATABASE_URL=postgresql://user:password@host:5432/signalcopilot?sslmode=require

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate a secure secret: openssl rand -base64 48
JWT_SECRET=your-super-secure-secret-key-minimum-32-characters-here
JWT_ISSUER=SignalCopilot.Api
JWT_AUDIENCE=SignalCopilot.Client
JWT_EXPIRATION_MINUTES=1440

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins (no spaces)
# Include your Vercel production and preview domains
ALLOWED_ORIGINS=https://app.signalcopilot.com,https://signalcopilot.com,https://*.vercel.app

# =============================================================================
# EMAIL (SendGrid)
# =============================================================================
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@signalcopilot.com
SENDGRID_FROM_NAME=Signal Copilot

# =============================================================================
# NEWS APIS (Optional - all have free tiers)
# =============================================================================

# NewsAPI.org (100 requests/day free, or $449/mo for more)
# Get key: https://newsapi.org/register
NEWSAPI_KEY=your_newsapi_key_here
NEWSAPI_ENABLED=false
NEWSAPI_BASE_URL=https://newsapi.org/v2

# Finnhub (60 calls/minute free, or $99/mo for more)
# Get key: https://finnhub.io/register
FINNHUB_API_KEY=your_finnhub_key_here
FINNHUB_ENABLED=false

# AlphaVantage (25 calls/day free, or $50/mo for more)
# Get key: https://www.alphavantage.co/support/#api-key
ALPHAVANTAGE_API_KEY=your_alphavantage_key_here
ALPHAVANTAGE_ENABLED=false

# SEC Edgar (Always free, no key required)
SECEDGAR_CONTACT_EMAIL=noreply@signalcopilot.com
SECEDGAR_ENABLED=true

# OpenAI (Optional - for advanced NLP)
# Get key: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_ENABLED=false

# =============================================================================
# ALERT SETTINGS
# =============================================================================
# Impact score threshold for high-impact alerts (0.0-10.0)
ALERT_HIGH_IMPACT_THRESHOLD=0.7

# Time for daily digest in HH:mm format (24-hour, UTC)
ALERT_DAILY_DIGEST_TIME=09:00

# =============================================================================
# HANGFIRE
# =============================================================================
# Password for accessing Hangfire dashboard at /hangfire
# Generate secure password: openssl rand -base64 24
HANGFIRE_DASHBOARD_PASSWORD=your-secure-dashboard-password-here

# Number of worker threads for background job processing
HANGFIRE_WORKER_COUNT=5

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment: Production, Staging, or Development
ASPNETCORE_ENVIRONMENT=Production

# URLs the application listens on (Docker typically uses 8080)
ASPNETCORE_URLS=http://0.0.0.0:8080

# =============================================================================
# CLOUDFLARE R2 / SUPABASE STORAGE (Optional - for future portfolio image uploads)
# =============================================================================
# CLOUDFLARE_R2_ACCOUNT_ID=your-account-id
# CLOUDFLARE_R2_ACCESS_KEY_ID=your-access-key
# CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-secret-key
# CLOUDFLARE_R2_BUCKET_NAME=signalcopilot-portfolio-images

# OR Supabase Storage
# SUPABASE_URL=https://xxx.supabase.co
# SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_BUCKET_NAME=portfolio-images

# =============================================================================
# MONITORING & OBSERVABILITY (Optional)
# =============================================================================
# Sentry for error tracking
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Datadog APM
# DD_API_KEY=your-datadog-api-key
# DD_SERVICE=signalcopilot-api
# DD_ENV=production

# =============================================================================
# NOTES
# =============================================================================
# 1. All values should be on a single line (no multi-line values)
# 2. No spaces around = signs
# 3. No quotes needed unless value contains special characters
# 4. Comments start with # and are ignored
# 5. This file is for the BACKEND API only
# 6. Frontend uses NEXT_PUBLIC_* variables (see frontend/.env.production.example)
